@model VitoriaRestaurante.Models.UnitResult

@{
    ViewData["Title"] = "Opiniçao de Clientes";
}


<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
<link rel="stylesheet" href="/css/site.css">
<link rel="stylesheet" href="/css/Style.css">
<link href="/css/font.css" rel="stylesheet" type="text/css">
<link href="/css/font2.css" rel="stylesheet" type="=text/css">
<style>
    hr {
        margin-top: 20px;
        border: 0;
        border-top: 1px solid #eee;
    }

    ._2pi8 {
        padding-left: 8px;
        padding-right: 8px;
        margin-top: 10em;
    }

    th, td {
        font-size: 18px;
    }
</style>
<div class="header-otherpage">
    <div class="fullbg">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="logo-otherpages">
                    Vitoria <br /> Restaurante
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="page-name">
            <p class="author">Opiniao de restaurante</p>
        </div>
    </div>
</div>

<p>


</p>


<div>

    <form asp-action="Create">
        <div class="form-horizontal">
            <h4>Nos diga sua opiniao</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Assignment1Mark" class="col-md-2 control-label">Nome</label>
                <div class="col-md-10">
                    <input asp-for="Assignment1Mark" class="form-control" />
                    <span asp-validation-for="Assignment1Mark" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Assignment2Mark" class="col-md-2 control-label">Contato</label>
                <div class="col-md-10">
                    <input asp-for="Assignment2Mark" class="form-control" />
                    <span asp-validation-for="Assignment2Mark" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ExamMark" class="col-md-2 control-label">Data</label>
                <div class="col-md-10">
                    <input asp-for="ExamMark" class="form-control" />
                    <span asp-validation-for="ExamMark" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="col-md-2 control-label">Restaurante</label>
                <div class="col-md-10">
                    <input asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="col-md-2 control-label">Prato</label>
                <div class="col-md-10">
                    <input asp-for="StudentId" class="form-control" />
                    <span asp-validation-for="StudentId" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StudentName" class="col-md-2 control-label">Nos diga o que acho</label>
                <div class="col-md-10">
                    <input asp-for="StudentName" class="form-control" />
                    <span asp-validation-for="StudentName" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TotalMark" class="col-md-2 control-label">Nota de 1 - 10</label>
                <div class="col-md-10">
                    <input asp-for="TotalMark" class="form-control" />
                    <span asp-validation-for="TotalMark" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>
