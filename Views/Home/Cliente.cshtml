@model Comentario
@{
    ViewData["Title"] = "Comentario";
}

<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
<link rel="stylesheet" href="/css/site.css">
<link rel="stylesheet" href="/css/Style.css">
<link href="/css/font.css" rel="stylesheet" type="text/css">
<link href="/css/font2.css" rel="stylesheet" type="=text/css">
<style>
    hr {
        margin-top: 20px;
        border: 0;
        border-top: 1px solid #eee;
    }

    ._2pi8 {
        padding-left: 8px;
        padding-right: 8px;
        margin-top: 10em;
    }

    th, td {
        font-size: 18px;
    }
</style>
<div class="header-otherpage">
    <div class="fullbg">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="logo-otherpages">
                    Vitória <br /> Restaurante
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="page-name">
            <p class="author">Opinião de restaurante</p>
        </div>
    </div>
</div>

<p>


</p>
<br />



<form asp-controller="Home" asp-action="Cliente" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input class="form-control" asp-for="Nome" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label for="Restaurante">Restaurante:</label>
        <input class="form-control" asp-for="Restaurante" />
        <span asp-validation-for="Restaurante"></span>
    </div>

    <div class="form-group">
        <label for="Comentario">Comentario:</label>
        <input class="form-control" asp-for="Opiniao" />
        <span asp-validation-for="Opiniao"></span>
    </div>

    <button type="submit" class="btn btn-success">Dar opinião</button>
</form>